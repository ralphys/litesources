    cp $LOC/gb/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United Kingdom, please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United Kingdom (Cambridge)" ]]; then
    cp $LOC/gb/ca/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United Kingdom (Cambridge), please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United Kingdom (York)" ]]; then
    cp $LOC/gb/yo/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United Kingdom (York), please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United States of America" ]]; then
    cp $LOC/us/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United States of America, please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United States of America (Eastern)" ]]; then
    cp $LOC/us/ea/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United States of America (Eastern), please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United States of America (Central)" ]]; then
    cp $LOC/us/ce/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United States of America (Central), please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " United States of America (Pacific)" ]]; then
    cp $LOC/us/pa/sources.list $APT | zenity --progress --title="$lss" --text="$cs to United States of America (Pacific), please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " Uzbekistan" ]]; then
    cp $LOC/uz/sources.list $APT | zenity --progress --title="$lss" --text="$cs to Uzbekistan, please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " Viet Nam" ]]; then
    cp $LOC/vn/sources.list $APT | zenity --progress --title="$lss" --text="$cs to Viet Nam, please do not interrupt this operation..." --pulsate --auto-kill --auto-close

elif [[ "$CHSOURCE" =~ " Zimbabwe" ]]; then
    cp $LOC/zw/sources.list $APT | zenity --progress --title="$lss" --text="$cs to Zimbabwe, please do not interrupt this operation..." --pulsate --auto-kill --auto-close

            else

                                        zenity --info \
                                        --title="$lss" --text="The process was interrupted!"
                        fi

fi
exit 0
