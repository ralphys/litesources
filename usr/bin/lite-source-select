#! /bin/bash
#--------------------------------------------------------------------------------------------------------
# Name: Lite Sources Select
# Description: Select a Repository Source on Linux Lite.
# Authors:  Jerry Bezencon
# Website: https://www.linuxliteos.com
#--------------------------------------------------------------------------------------------------------

# Ensure multi-language support
export LANG=C

# Kill off any package managers that may be running
if [ "$(pidof synaptic)" ] 
then
   sudo killall -9 synaptic
fi

if [ ! -z "$(pgrep gdebi-gtk)" ]
then
   killall -9 gdebi-gtk
fi

############################################################################################################################################################

: <<'END'

# Check Internet access
if eval "sudo -u ${SUDO_USER:-$USER} curl -sk google.com" >> /dev/null 2>&1; then
  : # pass
 else # Prompt ERROR internet connection
	notify-send -t 8000 "Cannot proceed" "Your computer is not connected to the Internet."
    (zenity --info --width=320 --height=120 --ok-label="Got it!" --title="         Lite Sources - No Internet connection detected..." \
            --text="\n<b>Your computer does not seem to be connected to the internet</b> \n \nLite Sources cannot proceed. \nPlease check your Internet connection and try again." --no-wrap)
        exit 0
fi

END

############################################################################################################################################################

# Set the window icon variable
ic="/usr/share/icons/zenity-llcc.png"

# Lite Sources Titlebar
LS="Lite Sources"

# Set app icon variable
#APPICON=/usr/share/litesources/flags/
APPICON=/home/jerry/repo/citrine/litesources_2.0-0010-linuxlite/usr/share/litesources/flags/

# Set the Title bar variable
lss="Lite Source Selector"

# APT folder location
#APT=/etc/apt
APT=/home/jerry/repo/citrine/litesources_2.0-0010-linuxlite/etc/apt

# Location of Country sources.list files
#LOC=/etc/apt/litesources/countries/
LOC=/home/jerry/repo/citrine/litesources_2.0-0010-linuxlite/etc/apt/litesources/countries/

# Download message variable
cs="Changing Repository Source"

############################################################################################################################################################

: <<'END'

# Update package list
zenity --question --title="$lss" --window-icon="$ic" --text="We will now fetch the Updates list.\n\nClick Yes to continue or No to abort."
   if [ "$?" -eq "0" ];then

    APTUPDATE=$(grep '^deb' -c /etc/apt/sources.list) # Total of repositories registered, this is approximated
    sudo apt-get update 2>&1 | awk -v total=$APTUPDATE '/^Ign|^ Get/{count++;$1=""} FNR { if (total != 0){percentage=int (100*count/total);print (percentage < 90?percentage:90),"\n#",substr($0, 0, 128) }; fflush(stdout)}' \
      | zenity --progress --text="Updating package lists..." --window-icon=$ic --title="Updating Software Sources - please wait..." --percentage=0 --auto-close --width=600

                                if [ "${PIPESTATUS[0]}" -ne "0" ]; then

                                        unset APTUPDATE
                                        zenity --error \
                                        --title="Error" --text="$lss couldn't fetch the package cache information lists."

                                        exit 1
                                fi
unset APTUPDATE

END

############################################################################################################################################################

# 78 Country Sources

CHSOURCE=$(zenity --title="$LS" \
